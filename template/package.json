{
  "name": "",
  "version": "0.0.0",
  "description": "",
  "main": "dist/main.js",
  "author": "",
  "license": "UNLICENSED",
  "type": "module",
  "engines": {
    "node": "^20.9.0 || >=22.5.1"
  },
  "scripts": {
    "build": "PM_RUN clean && PM_RUN build:ts",
    "build:ts": "node build.mjs",
    "clean": "rimraf dist",
    "dev": "PM_RUN clean && PM_RUN dev-start",
    "dev-start": "concurrently --handle-input PM_NAME:dev:*",
    "dev:app": "nodemon --watch dist --watch PM_LOCK_FILE --exec \"npm run start\"",
    "dev:build": "node build.mjs --watch",
    "dev:types": "tsc --watch --noEmit --preserveWatchOutput --pretty",
    "format": "prettier --write .",
    "start": "node --enable-source-maps .",
    "test": "concurrently --group PM_NAME:test:* && PM_RUN test-node",
    "test-node": "node --import ./test/setup.mjs --test --test-reporter spec",
    "test:format": "prettier --check .",
    "test:lint": "eslint .",
    "test:types": "tsc --noEmit --pretty"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.10",
    "concurrently": "^8.2.2",
    "esbuild": "^0.23.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.8.0",
    "nodemon": "^3.1.4",
    "prettier": "3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "~5.5.3",
    "typescript-eslint": "^7.16.1"
  }
}
