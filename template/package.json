{
  "name": "PROJECT_NAME",
  "version": "0.0.0",
  "description": "",
  "main": "dist/main.js",
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.11.0"
  },
  "scripts": {
    "build": "node --run clean && node --run build:ts",
    "build:ts": "node build.mjs",
    "clean": "rimraf dist",
    "dev": "node --run clean && node --run dev-start",
    "dev-start": "concurrently --handle-input node:dev:*",
    "dev:app": "nodemon --watch dist --watch PM_LOCK_FILE --exec \"node --run start\"",
    "dev:build": "node build.mjs --watch",
    "dev:types": "tsc --watch --noEmit --preserveWatchOutput --pretty",
    "docker:build": "docker build --tag PROJECT_NAME .",
    "docker:run": "docker run --init --interactive --tty --publish 3000:3000 PROJECT_NAME",
    "format": "prettier --write .",
    "start": "node --import ./dist/setup.js --enable-source-maps .",
    "test": "concurrently --group node:test:* && node --run test-node",
    "test-node": "tsx --import ./test/setup.mjs --test \"(src|test)/**/*.test.ts\"",
    "test:format": "prettier --check .",
    "test:lint": "eslint .",
    "test:types": "tsc --noEmit --pretty"
  },
  "dependencies": {},
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.10.1",
    "concurrently": "^9.1.0",
    "dotenv": "^16.4.5",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-n": "^17.14.0",
    "globals": "^15.12.0",
    "nodemon": "^3.1.7",
    "prettier": "3.4.1",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
